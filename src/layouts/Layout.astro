---
import { css } from 'styled-system/css';
import '~/assets/global.css';
import '~/index.css';

type Props = {
  title?: string;
  description?: string;
};

const websiteTitle = 'Byte Sized Games';
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | ${websiteTitle}` : websiteTitle}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div
      class={css({
        h: '100dvh',
        display: 'grid',
        placeItems: 'center',
        container: 'content',
        containerType: 'inline-size',
        bgColor: '#111111',
      })}
    >
      <div
        class={css({
          w: '100%',
          maxW: '540px',
          rounded: '8px',
          bgColor: '#ffffff',
          aspectRatio: '3 / 4',
        })}
      >
        <slot />
      </div>
    </div>
  </body>
</html>
